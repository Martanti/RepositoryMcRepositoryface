@model Dto.BaseModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>PMcPf</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Styles.Render("~/Content/pluginCss")
    @Scripts.Render("~/Scripts/AjaxRouting.js")
    @Styles.Render("~/Content/CommonStyles")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/" id="SignedInAs">@Resources.MainPageLayoutResources.header_SignedIn @Model.UserName</a>

                <ul class="nav navbar-right top-nav">
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-fw fa-database"></i>
                            <b class="caret"></b>
                        </a>

                        <ul class="dropdown-menu">
                            @foreach(var db in Model.UserDatabases)
                            {
                                <li>
                                    <a href="/Home/AddDatabaseToCookies?internalDbName=@db.InternalName">@db.Name</a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li>
                        <a id="SignOutButton" href="/Signout">
                            <i class="fa fa-fw fa-power-off"></i>
                        </a>
                    </li>

                </ul>
            </div>

            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse" aria-expanded="false">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a class="partial" value="/Home/Index">Home</a>
                    </li>
                    <li>
                        <a class="partial" value="/Home/DatabaseView" >View all Databases</a>
                    </li>
                    <li>
                        <a class="partial" value="/Home/AddDatabase" >Add Database</a>
                    </li>
                    <li>
                        <a class="partial" value="/Home/DatabaseEdit" >Edit a Database</a>
                    </li>
                    <li>
                        <a class="partial" value="/Home/ViewCurrentDatabase" >View selected Database</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="bodyContent">
            @RenderBody()
        </div>
        

    </div>
    <!-- /#wrapper -->

    @RenderSection("scripts", required: false)

</body>

</html>
