@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<form action="@Url.Action("LogInAction", "Login")" method="post">
    <div class="container formInsideWrapper">
        <div class="form-group">
            <label for="EmailInput">Email:</label>
            <div>
                <input type="text" name="Email" placeholder="Email" class="form-control" />
            </div>
            <div class="alert-danger errorMesasge">
                @ViewBag.EmalIsEmpty
            </div>
        </div>
        <div class="form-group">
            <label for="PasswordInput">Password:</label>
            <div>
                <input type="password" name="Password" placeholder="Password" class="form-control" />
            </div>
            <div class="alert-danger errorMesasge">
                @ViewBag.PasswordIsEmpty
            </div>
        </div>
        <div class="alert-danger errorMesasge">
            @ViewBag.IncorrectCredentials
        </div>
        <br />
        <button type="submit" class="btn">Log in</button>
        <br />
        <button type="button" class="btn" onclick="location.href='@Url.Action("RedirectToRegisterPage","Login")';">Sign up</button>
    </div>
</form>
