@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form  action="@Url.Action("RegistrationSubmint", "Login")" method="post">
    <div class="container formInsideWrapper">
        <div class="form-group">
            <label for="EmailInput">Email:</label>
            <div>
                <input type="text" name="Email" placeholder="Email" class="form-control" />
            </div>
            <div class="alert-danger errorMesasge">
                @ViewBag.BadEmail
            </div>
        </div>


        <div class="form-group">
            <label for="UsernameInput">Username:</label>
            <div>
                <input type="text" name="Username" placeholder="Username" class="form-control" />
            </div>
            <div class="alert-danger errorMesasge">
                @ViewBag.BadUsername
            </div>
        </div>


        <div class="form-group">
            <label for="PasswordInput">Password:</label>
            <div>
                <input type="password" name="Password" placeholder="Password" class="form-control" />
            </div>
            <div class="alert-danger errorMesasge">
                @ViewBag.BadPassword
            </div>
        </div>


        <div class="form-group">
            <label for="UsernameInput">Reenter your password:</label>
            <div>
                <input type="password" name="RepeatedPassword" placeholder="Password" class="form-control" />
            </div>
            <div class="alert-danger errorMesasge">
                @ViewBag.BadRePassword
            </div>
        </div>


        <br />
        <button type="submit" class="btn">Register</button>
        <br />
    </div>



</form>