
@{
    ViewBag.Title = "Home Page";
    Layout= "~/Views/Shared/_PageMainLayout.cshtml";
}

<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <form id="FormHolderAddDatabase" action="@Url.Action(String.Empty, "Login")" method="post">
            <div class="container formInputWrapper">
                <div class="alert-success succesfullRegistration">

                </div>

                <div class="form-group">
                    <label>Connection String</label>
                    <div>
                        <input name="ConnectionString" placeholder="Connection String" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Database Name (optional)</label>
                    <div>
                        <input name="Name" placeholder="Database name" class="form-control"/>
                    </div>
                </div>

                <button type="submit" class="btn spaceForButton">Test Connection</button>
            </div>
        </form>

    </div>
    <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->